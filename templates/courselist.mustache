{{!
    @template block_course_overview/courselist

    This template renders the course list for the course_overview block

    Example context (json):
    {}
}}
<div class="course-list container-fluid">
    {{# data }}
        {{^ hasoverviews }}
        <div id="course-{{ id }}" class="row courseovbox lead">
        {{/ hasoverviews }}
        {{# hasoverviews }}
        <div id="course-{{ id }}" style="background-color: {{coursewithoverviewscolor}};" class="row courseovbox lead">
        {{/ hasoverviews }}
            <div class="col-sm-1 span1 courseoverview-star">
                {{# isediting }}
                    <i class="icon fa fa-fw fa-arrows cursor" title="{{# str }}movecourse, block_course_overview, {{ fullname }}{{/ str }}"></i>
                {{/ isediting }}
                {{^ isediting }}
                    <a href="{{ favouritelink }}" class="favourite_icon text-primary" alt="{{ favouritealt }}">
                        <i class="icon fa fa-fw {{ favouriteicon }} " title="{{ favouritealt }}"></i>
                    </a>
                {{/ isediting }}
            </div>
            <div class="col-sm-11 courseoverview-block">
                {{^ hasoverviews }}
                    <div class="col-md-12 span12 courseoverview-title">
                        <strong><a {{^ visible }}class="dimmed"{{/ visible }} href="{{ link }}">{{ fullname }}</a></strong>
                    </div>
                {{/ hasoverviews }}
                {{# hasoverviews }}
                    <div class="col-md-8 span8 courseoverview-title">
                        <strong><a {{^ visible }}class="dimmed"{{/ visible }} href="{{ link }}">{{ fullname }}</a></strong>
                    </div>
                    <div class="col-md-4 span4 courseoverview-overviews">
                        {{# overviews }}
                             <span class="overview-icon" data-id="#{{ overviewid }}">
                                 {{{ icon }}}
                             </span>
                        {{/ overviews }}
                    </div>
                {{/ hasoverviews }}
                {{^ customnotificationinstalled }}
                    <div class="col-xs-12 courseoverview-category">
                        <small>{{ categories }}</small>
                    </div>
                {{/ customnotificationinstalled }}
                {{# customnotificationinstalled }}
                    <div class="col-xs-4 courseoverview-notification" style="font-size: 11pt;">
                        <div class="form-check">
                            <input class="form-check-input notificationcheckbox" type="checkbox" courseid="{{ id }}" userid="{{ userid }}" {{ checkboxchecked }} id="notificationcheckbox{{ id }}">
                            <label class="form-check-label" for="notificationcheckbox{{id}}">
                                Notifications
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-8 courseoverview-category">
                        <small>{{ categories }}</small>
                    </div>
                {{/ customnotificationinstalled }}
            </div>
        </div>
     {{/ data }}
     {{^ data }}
        {{^ isFavouritesTab }}
            <div class="alert alert-warning">
                {{# str }}nocourses, block_course_overview{{/ str }}
            </div>
        {{/ isFavouritesTab }}
        {{# isFavouritesTab }}
            <div class="alert alert-warning">
                {{# str }}nocoursesinfavourites, block_course_overview{{/ str }}
            </div>
        {{/ isFavouritesTab }}
     {{/ data }}
</div>
